<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
    <variable
        name="service"        type="com.hsiaoling.bao.data.Service" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_marginStart="30dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:statusBackground="@{service.status}"
            tools:background="@color/gray_999999"
            tools:layout_editor_absoluteX="-80dp"
            tools:layout_editor_absoluteY="-11dp" />

        <ImageView
            android:id="@+id/image_sort_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/statuswhite1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/statuswhite1" />

        <TextView
            android:id="@+id/text_reserve_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/white_FFFFFF"
            app:itemScheduleTime="@{service.scheduleSort}"
            app:layout_constraintBottom_toBottomOf="@+id/image_sort_number"
            app:layout_constraintStart_toEndOf="@id/image_sort_number"
            app:layout_constraintTop_toTopOf="@+id/image_sort_number"
            app:layout_constraintVertical_bias="1.0"
            tools:text="12 noon" />

        <TextView
            android:id="@+id/text_reserve_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white_FFFFFF"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/text_reserve_time"
            app:layout_constraintStart_toEndOf="@id/text_reserve_time"
            app:layout_constraintTop_toTopOf="@+id/text_reserve_time"
            app:layout_constraintVertical_bias="0.0"
            app:status="@{service.status}"
            tools:text="預約狀態" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white_FFFFFF"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/text_reserve_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_reserve_status"
            app:layout_constraintVertical_bias="0.0"
            app:timeToDisplayFormat="@{service.reserveTime}"
            tools:text="預約時間" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

