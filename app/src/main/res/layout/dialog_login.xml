<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.hsiaoling.bao.network.LoadApiStatus"/>
        <variable name="viewModel" type="com.hsiaoling.bao.login.LoginViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:background="@color/dark1Blue"
            android:onClick="@{() -> viewModel.leave()}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_login"
            android:layout_width="0dp"
            android:layout_height="600dp"
            android:background="@drawable/bg_dialog_corner"
            android:onClick="@{() -> viewModel.nothing()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/imageView_bao"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginTop="104dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.358"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baolog0" />

            <View
                android:id="@+id/view_login_separation"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/gray_cccccc"
                app:layout_constraintBottom_toTopOf="@+id/button_login_salesman"
                app:layout_constraintEnd_toEndOf="@+id/button_login_salesman"
                app:layout_constraintStart_toStartOf="@+id/button_login_salesman" />


            <ImageView
                android:id="@+id/imageView_store"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/view_login_separation"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/store1" />

            <TextView
                android:id="@+id/text_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="松菸文創店"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_store"
                app:layout_constraintStart_toEndOf="@+id/imageView_store"
                app:layout_constraintTop_toTopOf="@+id/imageView_store" />

            <ImageView
                android:id="@+id/imageView_salesman"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_store"
                app:layout_constraintStart_toEndOf="@+id/text_store"
                app:layout_constraintTop_toTopOf="@+id/imageView_store"
                app:srcCompat="@drawable/salesman2" />

            <Spinner
                android:id="@+id/text_salesman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:prompt="@string/select_salesman"
                android:selectedItemPosition="@={viewModel.selectedSalesmanPosition}"
                android:spinnerMode="dialog"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_store"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/imageView_salesman"
                app:layout_constraintTop_toTopOf="@+id/imageView_store"
                tools:text="選擇門市業務人員" />

            <Button
                android:id="@+id/button_login_salesman"
                style="@style/SalesmanLoginButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:letterSpacing="0.15"
                android:onClick="@{() -> viewModel.navigateToCalendar(viewModel.selectedSalesman)}"
                android:text="@string/login_twm_text"
                android:textAllCaps="false"
                android:textColor="@color/white_FFFFFF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/login_twm_text" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="122dp"
                android:layout_height="89dp"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.529"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mor0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
